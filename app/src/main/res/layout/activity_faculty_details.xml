<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolBarFacultyDetails"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#F303AA9A"
        app:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rlFaculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F303AA9A">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civFaculty"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/default_user">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvfacultyname"
            android:textSize="28sp"
            android:layout_below="@+id/civFaculty"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Faculty Name">

        </TextView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cvMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlFaculty"
        android:layout_marginTop="5dp"
        android:background="#ED0EDAC7"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Phone No."
                android:textSize="24sp"
                android:textStyle="italic">

            </TextView>

            <TextView
                android:id="@+id/tvline"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/tvMobile"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#871F98">

            </TextView>

            <TextView
                android:id="@+id/tvnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvline"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="99999999"
                android:textIsSelectable="true"
                android:textSize="24sp"
                android:textStyle="italic">

            </TextView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvMobile"
        android:layout_marginTop="20dp"
        android:background="#ED0EDAC7"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Email ID"
                android:textSize="24sp"
                android:textStyle="italic">

            </TextView>

            <TextView
                android:id="@+id/tvline1"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/tvEmail"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#871F98">

            </TextView>

            <TextView
                android:id="@+id/tvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvline1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="xyz@gmail.com"
                android:textIsSelectable="true"
                android:textSize="24sp"
                android:textStyle="italic">

            </TextView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>